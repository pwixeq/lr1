import pytest
def comp(x, y):
    return x*(y)**2

def sover(x):
    if x >= 18:
        return True
    else:
        return False

def ravn_triangle(x, y, z):
    if z==x==y:
        return True
    else:
        return False

def p_triangle(a, b, c):
    if a==b==c:
        return 3 * a
    else:
        return a+b+c

def discriminant(a, b, c):
    if b**2 - 4*a*c >= 0:
        return True
    else:
        return False

def minus(nums):
    r = []
    for num in nums:
        r.append(num-1)
    return r

def comp3(nums):
    r = []
    for num in nums:
        r.append(num*3)
    return r

@pytest.fixture()
def chet():
    print('\nРабота фикстуры')
    chet_num = []
    for num in range(1, 20):
            if num % 2 == 0:
                chet_num.append(num)
    yield chet_num
    print('\nРабота финализатора')
